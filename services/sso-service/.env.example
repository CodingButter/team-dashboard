# Enterprise SSO Service Configuration

# Server Configuration
SSO_PORT=3006
SSO_HOST=0.0.0.0
NODE_ENV=development
SSO_BASE_URL=http://localhost:3006
TRUSTED_PROXIES=127.0.0.1,::1

# CORS Configuration
CORS_ORIGIN=true
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=team_dashboard_sso
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_READY_CHECK=true

# SSO Configuration
SSO_ENTITY_ID=team-dashboard-sso
SSO_CERTIFICATE_PATH=./certs/cert.pem
SSO_PRIVATE_KEY_PATH=./certs/key.pem
SSO_SESSION_TIMEOUT=1440
SSO_MAX_SESSIONS=10
SSO_ENABLE_IDP_INITIATED=true
SSO_SIGNATURE_ALGORITHM=sha256
SSO_DIGEST_ALGORITHM=sha256

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15 minutes
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false

# Helmet Security Headers
HELMET_CSP=true
HELMET_COEP=false
HELMET_COOP=true
HELMET_CORP=true
HELMET_DNS_PREFETCH=true
HELMET_FRAMEGUARD=true
HELMET_HIDE_POWERED_BY=true
HELMET_HSTS=true
HELMET_IE_NO_OPEN=true
HELMET_NO_SNIFF=true
HELMET_ORIGIN_AGENT_CLUSTER=true
HELMET_PERMITTED_CROSS_DOMAIN=false
HELMET_REFERRER_POLICY=true
HELMET_XSS_FILTER=true

# Compliance Configuration
COMPLIANCE_AUDIT_LOGGING=true
COMPLIANCE_AUDIT_LEVEL=standard
COMPLIANCE_AUDIT_RETENTION=2555
COMPLIANCE_REAL_TIME_ALERTS=true
COMPLIANCE_FRAMEWORKS=soc2_type2,hipaa
COMPLIANCE_PII_CLASSIFICATION=required
COMPLIANCE_PHI_CLASSIFICATION=required
COMPLIANCE_CONFIDENTIAL_CLASSIFICATION=required

# Encryption Configuration
COMPLIANCE_ENCRYPTION_ALGORITHM=aes-256-gcm
COMPLIANCE_KEY_ROTATION_DAYS=90
COMPLIANCE_KEY_MANAGEMENT=internal

# Monitoring Configuration
MONITORING_METRICS=true
MONITORING_METRICS_ENDPOINT=/metrics
MONITORING_HEALTH_CHECK=true
MONITORING_HEALTH_ENDPOINT=/health
LOG_LEVEL=info
LOG_FORMAT=json

# Notification Configuration
NOTIFICATIONS_EMAIL=true
NOTIFICATIONS_WEBHOOKS=true
NOTIFICATIONS_SLACK=false

# SMTP Configuration (if email notifications enabled)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@team-dashboard.com

# Webhook Configuration (if webhook notifications enabled)
WEBHOOK_DEFAULT_URL=https://your-webhook-endpoint.com/sso-alerts
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRIES=3

# Development/Testing Configuration
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true
MOCK_EXTERNAL_SERVICES=true