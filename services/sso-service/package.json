  "dependencies": {
    "@team-dashboard/types": "workspace:*",
    "@team-dashboard/utils": "workspace:*",
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^12.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "saml2-js": "^3.1.0",
    "passport-saml": "^3.2.4",
    "ldapjs": "^3.0.7",
    "node-forge": "^1.3.1",
    "xml2js": "^0.6.2",
    "bcrypt": "^5.1.1",
    "jose": "^5.2.0",
