FROM node:20-alpine

# Install Git and SSH for repository operations
RUN apk add --no-cache git openssh-client

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install pnpm
RUN npm install -g pnpm

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Create directory for Git workspace
RUN mkdir -p /tmp/git-workspace && chmod 755 /tmp/git-workspace

# Expose port
EXPOSE 3004

# Set environment variables
ENV NODE_ENV=development
ENV GIT_WORKSPACE_ROOT=/tmp/git-workspace
ENV PORT=3004
ENV HOST=0.0.0.0

# Start the development server
CMD ["pnpm", "dev"]