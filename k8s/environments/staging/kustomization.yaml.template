apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

metadata:
  name: team-dashboard-staging

namespace: team-dashboard-staging

resources:
- ../../base

patchesStrategicMerge:
- replica-patch.yaml
- ingress.yaml

images:
- name: ghcr.io/codingbutter/team-dashboard/dashboard
  newTag: ${VERSION}
- name: ghcr.io/codingbutter/team-dashboard/agent-manager
  newTag: ${VERSION}
- name: ghcr.io/codingbutter/team-dashboard/mcp-manager
  newTag: ${VERSION}
- name: ghcr.io/codingbutter/team-dashboard/openai-service
  newTag: ${VERSION}

commonLabels:
  environment: staging
  app.kubernetes.io/version: ${VERSION}

configMapGenerator:
- name: staging-config
  literals:
  - ENVIRONMENT=staging
  - LOG_LEVEL=debug
  - METRICS_ENABLED=true