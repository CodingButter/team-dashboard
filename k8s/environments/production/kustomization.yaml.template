apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

metadata:
  name: team-dashboard-production

namespace: team-dashboard-prod

resources:
- ../../base

patchesStrategicMerge:
- replica-patch.yaml
- ingress.yaml
- hpa.yaml

images:
- name: ghcr.io/codingbutter/team-dashboard/dashboard
  newTag: ${VERSION}
- name: ghcr.io/codingbutter/team-dashboard/agent-manager
  newTag: ${VERSION}
- name: ghcr.io/codingbutter/team-dashboard/mcp-manager
  newTag: ${VERSION}
- name: ghcr.io/codingbutter/team-dashboard/openai-service
  newTag: ${VERSION}

commonLabels:
  environment: production
  app.kubernetes.io/version: ${VERSION}
  version: blue

configMapGenerator:
- name: production-config
  literals:
  - ENVIRONMENT=production
  - LOG_LEVEL=info
  - METRICS_ENABLED=true
  - RATE_LIMIT_ENABLED=true